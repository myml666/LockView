<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:background="#ED6EE2"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.zhy.zhy_gesturelockview.view.GestureLockViewGroup
        android:id="@+id/id_gestureLockViewGroup"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        zhy:color_no_finger_inner_circle="#CDCDCD"
        zhy:color_no_finger_outer_circle="#CDCDCD"
        zhy:color_finger_fill="#ffffff"
        zhy:color_finger_up_success="#FF8B23"
        zhy:color_finger_up_filed="#FF0000"
        zhy:color_finger_on="#FF8B23"
        zhy:count="3"
        zhy:tryTimes="5" />
<!--   zhy:color_no_finger_inner_circle="#ff085D58"
        zhy:color_no_finger_outer_circle="#ff08F0E0"
        zhy:color_finger_on="#FF1734BF" -->

</RelativeLayout>